{
    "manifest_version": 2,
    "name": "Scroll Buttons",
    "version": "2.4",
    "description": "Adds scroll buttons to web page.",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "storage"
    ],
    "content_scripts": [{
        "all_frames": false,
        "matches": ["<all_urls>"],
        "css": ["dingoscroll.css"],
        "js": ["dingoscroll.js"]
    }],
    "web_accessible_resources": [
        "images/*"
    ],
    "options_ui": {
        "browser_style": true,
        "page": "options/options.html"
    },
    "browser_action": {
        "browser_style": true,
        "default_title": "Speed",
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/down-16.png",
            "32": "icons/down-32.png",
            "64": "icons/down-64.png"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "scroll-buttons@aquafortis"
        }
    }
}
