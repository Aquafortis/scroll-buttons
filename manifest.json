{
    "manifest_version": 2,
    "name": "Scroll Buttons",
    "version": "1.3",
    "description": "Adds scroll buttons to web page.",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "storage"
    ],
    "content_scripts": [{
        "all_frames": false,
        "matches": ["<all_urls>"],
        "run_at": "document_start",
        "js": ["dingoscroll.js"],
        "css": ["dingoscroll.css"]
    }],
    "web_accessible_resources": [
        "dingoup.png",
        "dingodn.png"
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "applications": {
        "gecko": {
            "id": "scroll-buttons@aquafortis"
        }
    }
}
